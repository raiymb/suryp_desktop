{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1548",
    "distDir": "../dist"
  },
  "package": {
    "productName": "FileSorter",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": ["http://localhost:8085/**", "http://localhost:3000/**", "https://*.filesorter.app/**"]
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "app.filesorter.desktop",
      "targets": "all",
      "windows": {
        "wix": null
      }
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "windows": [
      {
        "label": "main",
        "title": "FileSorter",
        "width": 400,
        "height": 500,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "center": true,
        "decorations": true,
        "skipTaskbar": true
      }
    ]
  }
}
